{
    "name": "chamikasamaraweera/payhere-php-sdk",
    "description": "PHP SDK for PayHere Payment Gateway",
    "type": "library",
    "keywords": [
        "payhere",
        "payment",
        "gateway",
        "sdk",
        "php",
        "payhere-php-sdk"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "ChamikaSamaraweera",
            "email": "chamika@teaminfinity.lk"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "captainhook/captainhook": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Payhere\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "./vendor/bin/captainhook install --skip-existing"
        ],
        "post-update-cmd": [
            "./vendor/bin/captainhook install --skip-existing"
        ]
    },
}